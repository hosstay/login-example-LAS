@model login_example_SRA.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

@{
    Layout = "~/Views/Authentication/_AuthLayout.cshtml";
}

<form id="auth-div" asp-action="Register" method="post">
    <label id="title">Test Website</label>
    <br />
    <br />

    <div class="form-group">
        <div id="input-div">
            <label asp-for="Username" class="control-label float-left"></label>
            <input asp-for="Username" class="form-control float-right w-auto" onkeypress="handleCapsLock(event)"></input>
        </div>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div id="input-div">
            <label asp-for="Password" class="control-label float-left"></label>
            <input asp-for="Password" class="form-control float-right w-auto" onkeypress="handleCapsLock(event)"></input>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div id="input-div">
            <label asp-for="ConfirmPassword" class="control-label float-left"></label>
            <input asp-for="ConfirmPassword" class="form-control float-right w-auto" onkeypress="handleCapsLock(event)"></input>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <input id="submit-button" type="submit" class="float-right" value="Register">
    <input id="login-button" type="button" class="float-left" value="Login" onclick="location.href='@Url.Action("Login")'">
    <br />
    <br />

    <div id="error-text" asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div id="error-text-editable" class="text-danger"></div>
    <br />
    <br />
</form>